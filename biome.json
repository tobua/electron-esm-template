{
	"$schema": "node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"noDefaultExport": "off"
			},
			"correctness": {
				"noNodejsModules": "off",
				"useImportExtensions": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"indentStyle": "space"
		}
	},
	"formatter": {
		"lineWidth": 120
	},
	"files": {
		"ignore": ["node_modules", "dist", "executable"]
	}
}
