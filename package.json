{
  "name": "electron-esm-template",
  "description": "Minimal ESM Electron template with Playwright for testing.",
  "version": "1.0.0",
  "repository": "https://github.com/tobua/electron-esm-template",
  "license": "CC0-1.0",
  "author": "Matthias Giger",
  "scripts": {
    "build": "rsbuild build",
    "check": "biome check --apply .",
    "distribute": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "package": "electron-builder --dir",
    "start": "electron .",
    "test": "playwright test --config test/playwright.config.ts",
    "types": "tsc",
    "watch": "rsbuild build --watch",
    "web": "rsbuild dev --open"
  },
  "build": {
    "directories": {
      "output": "executable"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@playwright/test": "^1.44.0",
    "@rsbuild/core": "^0.6.15",
    "@rsbuild/plugin-react": "^0.6.15",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "electron": "^30.0.6",
    "electron-builder": "^24.13.3",
    "playwright": "^1.44.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.4.5"
  },
  "type": "module",
  "main": "main.js"
}
